{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": false,
    "removeComments": false,
    "moduleResolution": "node",
    "strict": true,
    "lib": ["es2016"],
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "exclude": [
    "src/**/*.spec.*"
  ],
  "include": [
    "src/**/*"
  ]
}
